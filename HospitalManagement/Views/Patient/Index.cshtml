@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Xəstələr";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Xəstə Əlavə Et</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
        <th>@Html.DisplayNameFor(model => model.First().BirthDate)</th>
        <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
        <th>@Html.DisplayNameFor(model => model.First().Address)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Ətraflı</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Redaktə Et</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>